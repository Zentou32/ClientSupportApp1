<Window x:Class="ClientSupportApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Background="#f8f8f8">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Логин:"/>
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20"/>

            <Button Content="Войти" Height="40" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
